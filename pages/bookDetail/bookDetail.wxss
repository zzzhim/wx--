.detail {
    background-color: #f7f7f7;
    min-height: 100vh;
    position: relative;
}

.detail-head {
    width: 99.87vw;
	height: 14.4vw;
	background-color: #ffffff;
	box-shadow: 0vw 0.27vw 1.33vw 0vw rgba(203, 203, 203, 0.1);
}

.content {
    width: 100vw;
	background-color: #ffffff;
    padding: 4.13vw 0;
}

.content-title {
    font-size: 4vw;
	line-height: 5.33vw;
	letter-spacing: 0vw;
	color: #292929;
    text-align: center;
    margin-bottom: 4.13vw;
}

.content-text {
    padding: 0 8vw;
    font-size: 3.73vw;
	line-height: 6.13vw;
	letter-spacing: 0vw;
	color: #666666;
}