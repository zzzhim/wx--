.block {
    width: 44vw;
	height: 62.67vw;
    background-color: #ffffff;
	box-shadow: 0vw 0.27vw 2.37vw 0.03vw rgba(186, 186, 186, 0.2);
}

.block-header {
    height: 10.67vw;
    padding: 2.67vw 2.8vw;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.block-header-title {
    width: 9.6vw;
	height: 5.33vw;
	background-color: #f7f7f7;
    font-size: 3.2vw;
	line-height: 5.33vw;
	letter-spacing: 0vw;
	color: #0f0f0f;
    text-align: center;
}

.block-header-like {
    position: relative;
    padding-right: 4vw;
}

.block-header-like image {
	width: 3.47vw;
	height: 3.07vw;
}

.block-header-like text {
	font-size: 2.4vw;
	letter-spacing: -0.12vw;
	color: #bbbbbb;
    position: absolute;
    top: 0.5vw;
}

.block-content {
    width: 44vw;
	height: 32vw;
	background-color: #dcdcdc;
}

.block-content-bg {
    width: 44vw;
	height: 32vw;
    display: block;
}

.block-footer {
    height: 20vw;
    box-sizing: border-box;
    padding: 0 2.8vw;
    display: flex;
    justify-content: center;
    align-items: center;
}

.block-footer view {
    height: auto;
    line-height: 1.5;
    display: -webkit-box; 
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 3.73vw;
	color: #999999;
}