.block {
    padding: 4vw;
}

.title {
    box-sizing: border-box;
    padding-left: 4vw;
    position: relative;
    font-size: 3.73vw;
	font-weight: normal;
	font-stretch: normal;
	line-height: 5.33vw;
	letter-spacing: 0vw;
	color: #010101;
}

.title::before {
    content: '';
    width: 1.07vw;
	height: 3.73vw;
	background-color: #000000;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.content {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    padding: 0 4vw;
}

.content > text {
    margin-top: 2.67vw;
    margin-right: 2.67vw;
    padding: 1.73vw 2.8vw;
    background-color: #f7f7f7;
	border-radius: 0.27vw;
    display: inline-block;
    font-size: 3.73vw;
	font-weight: normal;
	font-stretch: normal;
	line-height: 5.33vw;
	letter-spacing: 0vw;
	color: #666666;
}